syntax enable
set number
set relativenumber
colorscheme badwolf
set tabstop=4
set softtabstop=4
set expandtab
set showcmd
set cursorline
filetype indent on
set wildmenu
set lazyredraw
set showmatch
set incsearch
set hlsearch
set foldenable
set foldlevelstart=10
set foldnestmax=10
let mapleader=","
nnoremap <space> za
set foldmethod=indent
nnoremap <leader>s :mksession!<CR>
